<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:include filename="$(find navigation_bot)/description/inertial_macros.xacro"/> 
<!--================================================================ COLOURS ==================================================================================================== -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

<!--================================================================ LINKS ====================================================================================================== -->

    <link name="origin"> <!-- base_link LINK --> 
        <visual>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>  

    <link name="base_link"> <!-- base_link LINK -->    
    </link>   

    <link name="Back_base_link">                                                                    
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <axis xyz ="0 0 1"/>
            <geometry>
                <cylinder radius= "0.01" length="0.4"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="Front_base_link">                                  
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <axis xyz ="0 0 1"/>
            <geometry>
                <cylinder radius= "0.01" length="0.4"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="LeftFront_wheel_support">
        <visual>
            <geometry>
                <box size="0.3 0.15 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>       
            <geometry>
                <box size="0.3 0.15 0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.32" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>  
    </link>

    <link name="RightFront_wheel_support">
        <visual>
            <geometry>
                <box size="0.3 0.15 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 0.15 0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.32" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>  
    </link>

    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> 
    </link>

    <link name="indicator_back_left_link">
        <visual>
            <geometry>
                <box size="0.1 0.01 0.001"/>    
            </geometry>
            <material name="white"/>   
        </visual>    
    </link>

    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> 
    </link>

    <link name="indicator_back_right_link">
        <visual>
            <geometry>
                <box size="0.1 0.01 0.001"/>    
            </geometry>
            <material name="white"/>      
        </visual>    
    </link>

    <link name="Front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> 
    </link>

    <link name="Front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius= "0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> 
    </link>

     <link name="indicator_Front_left_link">
        <visual>
            <geometry>
                <box size="0.1 0.01 0.001"/>    
            </geometry>
            <material name="white"/>   
        </visual>    
    </link>

    <link name="indicator_Front_right_link">
        <visual>
            <geometry>
                <box size="0.1 0.01 0.001"/>    
            </geometry>
            <material name="white"/>      
        </visual>    
    </link>

    <link name="camera_platform_link">
        <visual>
            <geometry>
                <box size="0.5 0.15 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.15 0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>  
    </link>

    <link name="support_right">
        <visual>
            <geometry>
                <box size="0.1 0.03 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.03 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link> 

    <link name="support_left">
        <visual>
            <geometry>
                <box size="0.1 0.03 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.03 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>   

    <link name="support">
        <visual>
            <geometry>
                <box size="0.1 0.3 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
            
<!--================================================================ REFERENCES ================================================================================================= -->
    <gazebo reference="base_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="Back_base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="Front_base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="LeftFront_wheel_support">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="RightFront_wheel_support">
        <material>Gazebo/White</material>
    </gazebo> 

    <gazebo reference="back_left_wheel">
        <mu1>1.7</mu1>
        <mu2>1.7</mu2>
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="indicator_back_left_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="back_right_wheel">
        <mu1>1.7</mu1>
        <mu2>1.7</mu2>
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="indicator_back_right_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="Front_left_wheel">
        <mu1>0.1</mu1>
        <mu2>0.1</mu2>
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="indicator_Front_left_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="Front_right_wheel">
        <mu1>0.1</mu1>
        <mu2>0.1</mu2>
        <material>Gazebo/Blue</material>
    </gazebo>

    <gazebo reference="indicator_Front_right_link">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="support_right">
        <material>Gazebo/White</material>
    </gazebo>

    <gazebo reference="support_left">
        <material>Gazebo/White</material>
    </gazebo>


<!--================================================================ JOINTS ===================================================================================================== -->

    <joint name="reference" type="fixed">
        <parent link="base_link"/>
        <child link="origin"/>
        <origin xyz="0.0 0 0.0"/>
    </joint> 

    <joint name="Back_base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="Back_base_link"/>
        <origin xyz="-0.05 0 -0.075"/>
    </joint> 

    <joint name="Front_base_link_joint" type="fixed"> 
        <parent link="base_link"/>
        <child link="Front_base_link"/>
        <origin xyz="0.35 0 -0.075"/>
    </joint>  

    <joint name="LeftFront_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="LeftFront_wheel_support"/>
        <origin xyz="0.3 -0.135 0" rpy="-${pi/2} 0 0"/>
    </joint>

    <joint name="RightFront_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="RightFront_wheel_support"/>
        <origin xyz="0.3 0.135 0" rpy="${pi/2} 0 0"/>
    </joint>

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.05 -0.175 -0.075" rpy="${pi/2} 0 0"/>
        <axis xyz ="0 0 -1"/>
    </joint>

    <joint name="indicator_back_left_joint" type="fixed">
        <parent link ="back_left_wheel"/>
        <child link ="indicator_back_left_link"/>
        <origin xyz="0 0 0.02"/>
    </joint>

    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.05 0.175 -0.075" rpy="${pi/2} 0 0"/>
        <axis xyz ="0 0 -1"/>
    </joint>

    <joint name="indicator_back_right_joint" type="fixed">
        <parent link ="back_right_wheel"/>
        <child link ="indicator_back_right_link"/>
        <origin xyz="0 0 -0.02"/>
    </joint>

    <joint name="Front_left_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="Front_left_wheel"/>
        <origin xyz="0.35 -0.175 -0.075" rpy="${pi/2} 0 0"/>
        <axis xyz ="0 0 -1"/>
    </joint> 
    
    <joint name="indicator_Front_left_joint" type="fixed">
        <parent link ="Front_left_wheel"/>
        <child link ="indicator_Front_left_link"/>
        <origin xyz="0 0 0.02"/>
    </joint>

    <joint name="Front_right_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="Front_right_wheel"/>
        <origin xyz="0.35 0.175 -0.075" rpy="${pi/2} 0 0"/> 
        <axis xyz ="0 0 -1"/>
    </joint>

    <joint name="indicator_Front_right_joint" type="fixed">
        <parent link ="Front_right_wheel"/>
        <child link ="indicator_Front_right_link"/>
        <origin xyz="0 0 -0.02" />
    </joint>

    <joint name="camera_platform_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_platform_link"/>
        <origin xyz="0.325 0 0.135" rpy="0 0 0"/>
    </joint>

    <joint name="support_right_joint" type="fixed"> 
        <parent link="support"/>
        <child link="support_right"/>
        <origin xyz="0 0.135 -0.03"/>  
    </joint>

    <joint name="support_left_joint" type="fixed">
        <parent link="support"/>
        <child link="support_left"/>
        <origin xyz="0 -0.135 -0.03"/>  
    </joint>

    <joint name="support_joint" type="fixed">
        <parent link="camera_platform_link"/>
        <child link="support"/>
        <origin xyz="0 0 0"/>  
    </joint>

</robot>
    

   